<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadMedication"
    tools:ignore="ExtraText">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardUploadMedication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/blue_border">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Medication"
                android:textSize="40sp"
                android:paddingTop="30dp"
                android:paddingBottom="60dp"
                android:textAlignment="center"
                android:textColor="@color/blue"/>

            <!-- EditText për emrin e medikamentit -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadMedicationName"
                android:background="@drawable/blue_border"
                android:layout_marginTop="30dp"
                android:padding="16dp"
                android:hint="Enter medication name"
                android:gravity="start|center_vertical"
                android:textColor="@color/blue"/>



            <!-- EditText për dozën e medikamentit -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadDosage"
                android:background="@drawable/blue_border"
                android:layout_marginTop="30dp"
                android:padding="16dp"
                android:hint="Enter dosage"
                android:gravity="start|center_vertical"
                android:textColor="@color/blue"/>

            <!-- Spinner për caktimin e orarit të marrjes së medikamentit (schedule) -->
            <Spinner
                android:id="@+id/uploadScheduler"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:padding="16dp"
                android:entries="@array/schedule_options"/>

            <!-- Butoni për ruajtjen e të dhënave -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:id="@+id/saveButton"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:cornerRadius="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>
